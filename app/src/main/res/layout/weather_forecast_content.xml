<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_weather_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/weather_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/weather"
        android:src="?android:attr/colorFocusedHighlight" />

    <TextView
        android:id="@+id/temp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="37dp"
        android:text="@string/Current_temperature" />

    <TextView
        android:id="@+id/temp_min_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temp_textView"
        android:layout_below="@+id/temp_textView"
        android:layout_marginTop="13dp"
        android:text="@string/Minimum_temperature" />

    <TextView
        android:id="@+id/temp_max_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temp_min_textView"
        android:layout_below="@+id/temp_min_textView"
        android:layout_marginTop="23dp"
        android:text="@string/Maximum_temperature" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temp_min_textView"
        android:layout_below="@+id/temp_max_textView"
        android:layout_marginTop="32dp"
        tools:visibility="invisible" />
</RelativeLayout>